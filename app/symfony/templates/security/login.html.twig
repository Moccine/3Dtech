{% extends 'base.html.twig' %}
{% block body %}
  {% if app.user %}
    <div class="mb-3">
      You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% else %}
  <section class="faq-area faq-about bg_cover pt-115 pb-120">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="section-title text-center">
            <span>3DTECH</span>
            <h3 class="title">Se connecter</h3>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="faq-box-area faq-box-about">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="faq-box white-bg">
            <div class="row">
              <div class="col-lg-6">
                <div class="faq-accordion">
                  <div class="faq-accordion-content">
                    <h4 class="title">Besoin d'information</h4>
                    <p>
                      Merci de votre visite sur notre portail et système d'assistance.
                      Veuillez parcourir les articles disponibles ou créer un ticket pour nous contacter.
                    </p>
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="faq-form">
                  <div class="faq-title">
                    <h4 class="title">Se connecter</h4>
                  </div>
                  {{ form_start(form) }}
                  {% for flashMessage in app.session.flashbag.get('login-error') %}
                    <span class="text-danger">{{ flashMessage }}</span>
                  {% endfor %}
                  <div class="input-box mt-20">
                    {{ form_row(form.email) }}
                  </div>
                  <div class="input-box mt-20">
                    {{ form_row(form.password) }}
                  </div>
                  <div class="input-box mt-20">
                    {{ form_row(form.submit, {'attr':{'class': 'main-btn mt-35'}}) }}
                  </div>
                  {{ form_end(form) }}
                  <div class="input-box mt-20">
                      <div><a href="{{ path('registration') }}" style="margin-right: 15px">s'inscrire</a>
                     <a href="{{ path('user_request') }}">mot passe oublié</a></div>

                  </div>
                </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!--====== FAQ PART ENDS ======-->

  <!--====== BRAND PART START ======-->
  {% include 'common/brand_section.html.twig' %}
  {% include 'common/subcribe_part.html.twig' %}

{% endblock %}
