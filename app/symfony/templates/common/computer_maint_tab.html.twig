{% if imageRef is not defined %}
    {% set imageRef = 'assets/images/3dtech-hotline-informatique-2.jpg' %}
{% endif %}
{% if title is not defined %}
    {% set title = 'Supervision instantan√©e 24H/24, 7j/7 de votre parc informatique' %}
{% endif %}
{% if description is not defined %}
    {% set description = 'description' %}
{% endif %}
{% if minTitle is not defined %}
    {% set miniTitle = '' %}
{% endif %}

<div class="row align-items-center">
    <div class="col-lg-4 col-md-6 col-sm-8">
        <div class="team-details-thumb">
            <div class="thumb">
                <img src="{{ asset(imageRef) }}" alt="">
            </div>
            <div class="content text-center">
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <span> + {{ minTitle }}</span>
        <div class="team-details-content">
            <h4 class="title">{{ title }}</h4>
            <p> {{ description }} </p>
        </div>
    </div>
</div>
