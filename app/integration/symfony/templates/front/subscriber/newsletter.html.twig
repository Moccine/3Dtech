{% set form = subscription_get_form_view() %}

{% for message in app.flashes('success') %}
  <div>
    {{ message }}
  </div>
{% endfor %}
<hr><hr>
{{ form_start(form, {'attr' : {'action' : path('newsletter')}}) }}
  {{ form_label(form.email) }}
  {{ form_widget(form.email) }}

  {{ form_row(form.submit) }}
{{ form_end(form) }}
