{% extends 'base.html.twig' %}
{% block title %}Comparateur{% endblock %}
{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #F5F5F5;
      padding: 2px 6px;
    }
  </style>

  <div class="example-wrapper">
    <h1>Comparateur</h1>
    <table class="table">
      <thead>
      <tr>
        <th>machines</th>
        <th>Attributs</th>
      </tr>
      </thead>
      <tbody>
      {% for machine in machines %}
        <tr>
          <td> {{ machine.code }}</td>
          <td>
            <ul>
              {% for attribute in attributes[machine.code] %}
                <li>{{ attribute.label }}: {{ attribute.value }} </li>
              {% endfor %}
            </ul>
          <td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
