{% for purchase in order.purchases %}
  <p>Amount: {{ purchase.amount ?? 0 }}</p>
  <p>Delivery: {{ purchase.delivery ?? 'not chosen' }}</p>
  
  <p>Début de la location: {{ purchase.startDate is null ? 'Date non sélectionnée' : purchase.startDate|date('d-m-Y') }} </p>
  <p>Fin de bail: {{ purchase.endDate is null ? 'Date non sélectionnée' : purchase.endDate|date('d-m-Y') }} </p>
{% endfor %}


